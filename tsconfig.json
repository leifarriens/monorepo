{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
